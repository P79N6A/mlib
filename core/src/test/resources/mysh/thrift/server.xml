<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--server-->
	<bean id="_service1Factory" class="mysh.thrift.ThriftServerFactory"
	      p:serverHost="localhost" p:serverPort="19090"
	      p:useTLS="true"
	      p:selfKeyStore="classpath:mysh/thrift/server.jks" p:selfKeyStorePw="server"
	      p:requireClientAuth="true"
	      p:trustKeyStore="classpath:mysh/thrift/rootPublic.jks" p:trustKeyStorePw="123456">
		<property name="processor">
			<bean class="mysh.thrift.TService1$Processor">
				<constructor-arg name="iface">
					<bean class="mysh.thrift.Service1Impl"/>
				</constructor-arg>
			</bean>
		</property>
		<property name="serverEventHandler">
			<bean class="mysh.thrift.ServerEventHandlerImpl"/>
		</property>
	</bean>

	<bean factory-bean="_service1Factory" factory-method="build"/>
</beans>
